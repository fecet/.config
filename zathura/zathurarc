# place in ~/.config/zathura/
# Zathura configuration file
# See man `man zathurarc'
#-----------------------------

set adjust-open "width"

set window-title-basename true

set guioptions ""

set selection-clipboard clipboard

set window-title-basename true

set incremental-search true

set show-v-scrollbar true

set scroll-step 200

set recolor   
set recolor-lightcolor \#222222
set recolor-keephue
set default-bg \#222230


map H feedkeys ":exec sh -c \"cat ~/.local/share/zathura/history | grep -Po '\[\K[^\]]*' | dmenu | xargs zathura\""

map <C-p> feedkeys ":exec sh -c \"echo $FILE | xclip -i -sel clip\"<Return>"

